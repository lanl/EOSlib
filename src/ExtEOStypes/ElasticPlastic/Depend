OS=_OS
CC_INCLUDE=$(CWD)/include
CC_LIB=$(CWD)/lib/$(OS)

IFLAGS=-I. -I$(CC_INCLUDE) 
IFLAGS_SUB=-I.. -I$(CC_INCLUDE)

INCLUDE_DIR=$(CC_INCLUDE)
EXEC_DIR=$(CWD)/bin/$(OS)
LIB_DIR=$(CWD)/lib/$(OS)

#

TestElastic:    $(CC_LIB)/ExtEOS.so -lEOSmanager $(CC_LIB)/EOS.so \
                $(CC_LIB)/Hayes.so -ldl ./ElasticPlastic.so

TestEP:         $(CC_LIB)/ExtEOS.so -lEOSmanager $(CC_LIB)/EOS.so \
                $(CC_LIB)/Hayes.so -ldl ./ElasticPlastic.so

TestXmanager:   $(CC_LIB)/ExtEOS.so -lEOSmanager $(CC_LIB)/EOS.so \
                $(CC_LIB)/Hayes.so -ldl ./ElasticPlastic.so

TestRiemann:   $(CC_LIB)/ExtEOS.so -lEOSmanager $(CC_LIB)/EOS.so \
                $(CC_LIB)/Hayes.so -ldl ./ElasticPlastic.so
#

ElasticPlastic.a: Subs

#

.INSTALL
ElasticPlastic.a
Elastic.h       ElasticPlastic.h
ElasticTypes.h  ElasticPlasticTypes.h

.INCLUDE
ElasticPlastic.so: ElasticPlastic.a
	SharedLib ElasticPlastic.so ElasticPlastic.a

$(CC_LIB)/Hayes.so:
	cd ../../EOStypes/Hayes; ../../Compile InstallHayes


$(CC_LIB)/ExtEOS.so:
	cd ../../ExtEOS; ../Compile InstallExtEOS

