OS=_OS
CC_INCLUDE=$(CWD)/include
CC_LIB=$(CWD)/lib/$(OS)

IFLAGS=-I. -I$(CC_INCLUDE) 
IFLAGS_SUB=-I.. -I$(CC_INCLUDE)

INCLUDE_DIR=$(CC_INCLUDE)
EXEC_DIR=$(CWD)/bin/$(OS)
LIB_DIR=$(CWD)/lib/$(OS)


Elastic1D.a: SubsElastic
Plastic1D.a: SubsPlastic

TestElastic1D:  $(CC_LIB)/ExtEOS.so -lEOSmanager $(CC_LIB)/EOS.so \
                $(CC_LIB)/Hayes.so  $(CC_LIB)/MieGruneisen.so \
                -ldl ./Elastic1D.so ./Plastic1D.so
#               $(CC_LIB)/EOS.so $(CC_LIB)/Hayes.so \
#                $(CC_LIB)/MieGruneisen.so -ldl ./Elastic1D.so 

TestXmanager:   $(CC_LIB)/ExtEOS.so -lEOSmanager $(CC_LIB)/EOS.so \
                $(CC_LIB)/Hayes.so  $(CC_LIB)/MieGruneisen.so \
                -ldl ./Elastic1D.so ./Plastic1D.so

TestEP:         $(CC_LIB)/ExtEOS.so -lEOSmanager $(CC_LIB)/EOS.so \
                $(CC_LIB)/Hayes.so  $(CC_LIB)/MieGruneisen.so \
                -ldl ./Elastic1D.so ./Plastic1D.so

TestVMrate:     $(CC_LIB)/ExtEOS.so -lEOSmanager $(CC_LIB)/EOS.so \
                $(CC_LIB)/Hayes.so  $(CC_LIB)/MieGruneisen.so \
                -ldl ./Elastic1D.so ./Plastic1D.so

TestEPshock:    $(CC_LIB)/ExtEOS.so -lEOSmanager $(CC_LIB)/EOS.so \
                $(CC_LIB)/Hayes.so  $(CC_LIB)/MieGruneisen.so \
                -ldl ./Elastic1D.so ./Plastic1D.so

TwoShockEP:    $(CC_LIB)/ExtEOS.so -lEOSmanager $(CC_LIB)/EOS.so \
               $(CC_LIB)/Hayes.so  $(CC_LIB)/MieGruneisen.so \
               -ldl ./Elastic1D.so ./Plastic1D.so

TestRiemann:   $(CC_LIB)/ExtEOS.so -lEOSmanager $(CC_LIB)/EOS.so \
               $(CC_LIB)/Hayes.so  $(CC_LIB)/MieGruneisen.so \
               -ldl ./Elastic1D.so ./Plastic1D.so

TestElasticPMMA:  $(CC_LIB)/ExtEOS.so -lEOSmanager $(CC_LIB)/EOS.so \
               $(CC_LIB)/MieGruneisen.so -ldl ./Elastic1D.so ./Plastic1D.so

PMMAhug:      $(CC_LIB)/ExtEOS.so -lEOSmanager $(CC_LIB)/EOS.so \
