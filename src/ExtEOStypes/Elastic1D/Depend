Plastic1D.so: Plastic1D.a
	SharedLib Plastic1D.so Plastic1D.a

$(CC_LIB)/Hayes.so:
	cd ../../EOStypes/Hayes; ../../Compile InstallHayes

$(CC_LIB)/MieGruneisen.so:
	cd ../../EOStypes/MieGruneisen; ../../Compile InstallMieGruneisen

$(CC_LIB)/ExtEOS.so:
	cd ../../ExtEOS; ../Compile InstallExtEOS
