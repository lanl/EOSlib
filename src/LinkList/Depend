
ArrayTest: List.a -lLocalIo
ArrayTest2: List.a -lLocalIo
ListTest: List.a
NameArrayTest : List.a -lLocalIo -lString
ReferenceListTest : List.a
ListAccessTest : List.a

TESTS=TestArray TestList TestNameArray TestReferenceList TestListAccess 

List.a : subs

.INSTALL
Array.h List.h NameArray.h ListAccess.h ReferenceList.h
List.a

.INCLUDE

#	Run All Test Programs

Test: ${TESTS}

#	Test of Array

TestArray: ArrayTest ArrayTest2
	@echo "Running ArrayTest"
	@./ArrayTest > ArrayTest.out 2>&1
	@-diff ArrayTest.ans ArrayTest.out && echo "	ArrayTest passes"
	@echo "Running ArrayTest2"
	@./ArrayTest2 > ArrayTest2.out 2>&1
	@-diff ArrayTest2.ans ArrayTest2.out && echo "	ArrayTest2 passes"


#	Test of List

TestList: ListTest
	@echo "Running ListTest"
	@./ListTest > ListTest.out 2>&1 
	@-diff ListTest.ans ListTest.out && echo "	ListTest passes"

#	Test of NameArray
	
TestNameArray: NameArrayTest
	@echo "Running NameArrayTest"
	@./NameArrayTest > NameArrayTest.out  2>&1
	@-diff NameArrayTest.ans NameArrayTest.out && \
					echo "	NameArrayTest passes"
#	Test of ReferenceList

TestReferenceList: ReferenceListTest
	@echo "Running ReferenceListTest"
	@./ReferenceListTest > ReferenceListTest.out  2>&1
	@-diff ReferenceListTest.ans ReferenceListTest.out && \
					echo "	ReferenceListTest passes"

#	Test of ListAccess
	
TestListAccess: ListAccessTest
	@echo "Running ListAccessTest"
	@./ListAccessTest > ListAccessTest.out 2>&1
	@-diff ListAccessTest.ans ListAccessTest.out && \
					echo "	ListAccessTest passes"
