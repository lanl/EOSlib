OS=_OS
CC_INCLUDE=$(CWD)/include
CC_LIB=$(CWD)/lib/$(OS)


IFLAGS=-I. -I$(CC_INCLUDE) 
IFLAGS_SUB=-I.. -I$(CC_INCLUDE)

INCLUDE_DIR=$(CC_INCLUDE)
EXEC_DIR=$(CWD)/bin/$(OS)
LIB_DIR=$(CWD)/lib/$(OS)

#

Test1:	HayesBM.a -leos  -lDataBase -lODE -lOneDFunction -lList \
                       -lCalc -lLocalIo  -lLocalMath -lString -ldl

Test2:	    $(CC_LIB)/EOS.so -ldl ./HayesBM.so
Test2VT:	$(CC_LIB)/EOS.so -ldl ./HayesBM.so

#

HayesBMVe.a:	SubsVe
HayesBMVT.a:	SubsVT
HayesBM.a:	HayesBMVe.a HayesBMVT.a

#

.INSTALL
HayesBM.h     HayesBM_VT.h  HayesBMparams.h            
HayesBM.a

.INCLUDE
HayesBM.so: HayesBM.a
	SharedLib HayesBM.so HayesBM.a

InstallHayesBM: HayesBM.so
	@cp HayesBM.so $(LIB_DIR)/HayesBM.so; \
	$(ECHO) "*** shared object $(LIB_DIR)/HayesBM.so installed"
